{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "downlevelIteration": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es5",
      "es2015.collection",
      "es2015.promise",
      "es2016.array.include",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/shims/*.d.ts",
    "node_modules/d.ts",
    "node_modules/@types/jest/index.d.ts"
  ]
}
